@model Techbart.DB.SearchCustomerModel

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Create New", "Create")
</p>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@Html.HiddenFor(model => model.IsDesc)
@Html.HiddenFor(model => model.OrderBy)
@Html.HiddenFor(model => model.Skip)
@Html.HiddenFor(model => model.Take)

<table class="table">
	<thead>
		<tr id="search">
			<th>
				@Html.LabelFor(model => model.CustomerId, new { name = "CustomerId", @class="active desc" })
				<input class="form-control text-box single-line findid-box search" data-val="true" name="CustomerId" type="number">
			</th>
			<th>
				@Html.LabelFor(model => model.FirstName, new { name = "FirstName" })
				<input class="form-control text-box single-line search" data-val="true" name="FirstName" type="text">
			</th>
			<th>
				@Html.LabelFor(model => model.LastName, new { name = "LastName" })
				<input class="form-control text-box single-line search" data-val="true" name="LastName" type="text">
			</th>
			<th>
				@Html.LabelFor(model => model.Email, new { name = "Email" })
				<input class="form-control text-box single-line search" data-val="true" name="Email" type="text">
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody id="pagesdata">
		@Html.Action("PagesData", Model)
	</tbody>
	<tfoot id="pager">
		<tr>
			<td colspan="5">
				@Html.Action("ShowPager", Model)
			</td>
		</tr>
	</tfoot>
</table>
@section scripts{
	<script src="~/Scripts/page.js"></script>
}

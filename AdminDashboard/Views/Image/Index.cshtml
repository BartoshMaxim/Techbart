@model Techbart.DB.SearchImageModel

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
	@Html.ActionLink("Upload image", "Upload")
</p>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@Html.HiddenFor(model => model.IsDesc)
@Html.HiddenFor(model => model.OrderBy)
@Html.HiddenFor(model => model.Skip)
@Html.HiddenFor(model => model.Take)

<table class="table">
	<thead>
		<tr id="search">
			<th>
				@Html.LabelFor(model => model.ImageId, new { name = "ImageId", @class = "active desc" })
				<input class="form-control text-box single-line search" data-val="true" name="ImageId" type="number">
			</th>
			<th>
				@Html.LabelFor(model => model.ImageName, new { name = "ImageName" })
				<input class="form-control text-box single-line search" data-val="true" name="ImageName" type="text">
			</th>
			<th>
				@Html.LabelFor(model => model.ImagePath, new { name = "ImagePath" })
				<input class="form-control text-box single-line search" data-val="true" name="ImagePath" type="text">
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody id="pagesdata">
		@Html.Action("PagesData", Model)
	</tbody>
	<tfoot id="pager">
		<tr>
			<td colspan="5">
				@Html.Action("ShowPager", Model)
			</td>
		</tr>
	</tfoot>
</table>

@section scripts{
	<script src="~/Scripts/page.js"></script>
}
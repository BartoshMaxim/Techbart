@model Techbart.DB.UploadImageModel

<div class="form-horizontal col-lg-12">
    <div class="form-group">

        <div class="col-md-offset-3 col-md-9">
            <label class="upload-image btn btn-default" for="ImageFile">Browse...</label>
            <input class="upload-image file" type="file" title="search image" onchange="uploadImage(this)" id="ImageFile" name="ImageFile" accept="image/*" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-9">
            @Html.EditorFor(model => model.ImageName, new { htmlAttributes = new { @class = "form-control upload-image", title = "It will use in alt's" } })
            @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "text-danger" })
        </div>
    </div>
</div>